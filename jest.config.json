{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src",
    "<rootDir>/__tests__"
  ],
  "testMatch": [
    "**/__tests__/**/*.test.ts",
    "**/__tests__/**/*.test.js"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "verbose": true,
  "testTimeout": 90000,
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true
}